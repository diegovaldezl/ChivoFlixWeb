@using Microsoft.AspNetCore.Http;
@{
    if (Context.Session.GetString("username") == null)
    {
        Context.Response.Redirect("../Account/login");
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChivoFlixWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">ChivoFlixWeb</a>
            <button class="navbar-toggler border-white bg-light" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Listado">Usuarios</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Peliculas
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Peliculas" asp-action="Listado">Listado de peliculas</a>
                            <a class="dropdown-item" asp-controller="Peliculas" asp-action="NuevaPelicula">Agregar pelicula</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Categorias
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Categorias" asp-action="Listado">Listado de categorias</a>
                            <a class="dropdown-item" asp-controller="Categorias" asp-action="NuevaCategoria">Agregar categoria</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Planes
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Planes" asp-action="Index">Planes</a>
                            <a class="dropdown-item" asp-controller="DuracionPlanes" asp-action="Index">Duracion de planes</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Facturaciones" asp-action="Index">Facturacion</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item d-none d-sm-inline-block">
                        <a class="nav-link text-uppercase text-white">@Context.Session.GetString("username")</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("Logout","Account")" class="nav-link text-white btn btn-outline-danger">Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br />

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <br />

    <footer>
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">ChivoFlixWeb</h5>
                &copy; 2022 - ChivoFlixWeb - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
