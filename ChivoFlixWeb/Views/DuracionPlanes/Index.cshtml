@model IEnumerable<ChivoFlixWeb.Models.DuracionPlanes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Duracion de planes</h1>

<div class="row right">
    <a href="~/DuracionPlanes/Create" class="btn btn-primary col-md-1 card-text-center">Nuevo</a>
</div>
<br />
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Duracion del plan
            </th>
            <th>
                Ver
            </th>
            <th>
                Editar
            </th>
            <th>
                Borrar
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdDuracionPlanes" class="btn btn-success"><i class="bi bi-eye"></i></a> 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDuracionPlanes" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a> 
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdDuracionPlanes" class="btn btn-danger"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
