@model ChivoFlixWeb.Models.Planes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Registro</h1>

<h3>Estas apunto de borrar este registro, ¿Estas seguro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plann)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plann)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioPlan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioPlan)
        </dd>
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.IdDuracionPlanesNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDuracionPlanesNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.IdUsuariosNavigation)
        </dt>
        <dd class = "col-sm-12">
            @Html.DisplayFor(model => model.IdUsuariosNavigation.Email)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPlanes" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Regresar a la lista</a>
    </form>
</div>
