@model List<ChivoFlixWeb.Models.Generos>
@{
    ViewBag.Title = "Categorias";
}

<h2>Listado de Categorias</h2>
<div class="row right">
    <a href="~/Categorias/NuevaCategoria" class="btn btn-primary col-md-2 card-text-center">Nueva Categoria</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                   
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdGeneros</td>
                            <td>@item.Nombre</td>
                           
                            <td>
                                <a href="~///@item.IdGeneros" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>
                                <a href="~///@item.IdGeneros" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th scope="row">No hay registros</th>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
