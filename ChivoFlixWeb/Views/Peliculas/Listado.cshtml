@model List<ChivoFlixWeb.Models.Peliculas>
@{
    ViewBag.Title = "Peliculas";
}

<h2>Listado de Peliculas</h2>
<div class="row right">
    <a href="~/Peliculas/NuevaPelicula" class="btn btn-primary col-md-2 card-text-center">Nueva Pelicula</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Genero</th>
                    <th>Calidad</th>
                    <th>Categoria</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdPeliculas</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.IdGeneros</td>
                            <td>@item.Calidad</td>
                            <td>@item.CategoriaEdad</td>
                            <td>
                                <a href="~/Peliculas/EditarPelicula/@item.IdPeliculas" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>
                                <a href="~/Peliculas/EliminarPelicula/@item.IdPeliculas" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th scope="row">No hay registros</th>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
