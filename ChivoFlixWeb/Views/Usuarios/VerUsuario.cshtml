@model ChivoFlixWeb.Models.ViewModels.UsuarioVM
@{
    ViewBag.Title = "Editar Usuario";
}

<h2>Ver usuario</h2>

@using (Html.BeginForm("EditarUsuario", "Usuarios", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(d => d.IdUsuarios)
            @Html.TextBoxFor(d => d.IdUsuarios, "", new { @class = "form-control", @readonly = "readonly" })
            <div>
                @Html.LabelFor(d => d.Username)
                @Html.TextBoxFor(d => d.Username, "", new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(d => d.Username, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(d => d.Email)
                @Html.TextBoxFor(d => d.Email, "", new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(d => d.Email, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(d => d.Imagen)
                @Html.TextBoxFor(d => d.Imagen, "", new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(d => d.Imagen, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(d => d.IdPlanesNavigation)
                @Html.TextBoxFor(d => d.IdPlanes, "", new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(d => d.Imagen, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(d => d.IdRolNavigation)
                @Html.TextBoxFor(d => d.IdRolNavigation.Rol, "", new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(d => d.Imagen, null, new { @class = "text-danger" })
            </div>
            <br />
            <div class="col-md-1">
                <a href="~/Usuarios/Listado" class="btn btn-success">Regresar</a>
            </div>
        </div>
    </div>
}